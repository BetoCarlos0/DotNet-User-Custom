@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login">
    <div class="">
        <h1>@ViewData["Title"]</h1>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Input.Name" class="form-control" placeholder="Input.Name" />
                <label for="floatingInput" asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput " asp-for="Input.FirstName" class="form-control" placeholder="Input.FirstName" />
                <label for="floatingInput" asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input for="floatingInput" asp-for="Input.LastName" class="form-control" placeholder="Input.LastName" />
                <label id="floatingInput" asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Input.Email" class="form-control" placeholder="Input.Email" />
                <label for="floatingInput" asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Input.Password" class="form-control" placeholder="Input.Password"/>
                <label for="floatingInput" asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Input.ConfirmPassword" class="form-control" placeholder="Input.ConfirmPassword"/>
                <label for="floatingInput" asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
            <div class="form-group newaccount">
                <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Já possui uma Conta?</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
