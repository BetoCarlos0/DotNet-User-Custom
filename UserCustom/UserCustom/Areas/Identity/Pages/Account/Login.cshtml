@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login">
    <h1>@ViewData["Title"]</h1>
    <form id="account" method="post">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-floating mb-3">
            <input id="floatingInput" asp-for="Input.Email" class="form-control" placeholder="Input.Email" />
            <label for="floatingInput" asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input id="floatingInput" asp-for="Input.Password" class="form-control" placeholder="Input.Password"/>
            <label for="floatingInput" asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group meforgot">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn">Entrar</button>
        </div>
        <div class="form-group newaccount">
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Criar uma Conta</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
